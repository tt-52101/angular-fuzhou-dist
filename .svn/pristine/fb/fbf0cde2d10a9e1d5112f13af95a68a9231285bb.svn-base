<nz-card [nzBordered]="false">
  <div class="mb-md">
    <!-- 模糊搜索框 -->
    <nz-row nzGutter="16">
      <nz-col nzMd="6" nzSm="6">
        <!-- <form nz-form [nzLayout]="'inline'"> -->
          <nz-form-item>
            <nz-form-control>
              <nz-input-group nzSearch [nzSuffix]="suffixSearchButton">
                <input type="text" nz-input [(ngModel)]="filterText" (keyup.enter)="refresh()" name="filterText" [placeholder]="l('SearchWithThreeDot')">
                <ng-template #suffixSearchButton>
                  <button nz-button nzType="primary" nzSearch type="submit" (click)="refresh()">
                    <i class="anticon anticon-search"></i>
                  </button>
                </ng-template>
              </nz-input-group>
            </nz-form-control>
          </nz-form-item>
          <!-- </form> -->
        </nz-col>
        <nz-col nzMd="6" nzSm="6" class="btn-gutter">
          <button nz-button [nzType]="'primary'" *ngIf="isGranted('Pages.Menu.Create')" (click)="createOrEdit()">
            <!-- <i class="anticon anticon-plus"></i> -->
            <span>
              {{l("Create")}}
            </span>
          </button>
          <button nz-button [nzType]="'danger'" *ngIf="isGranted('Pages.Menu.BatchDelete')" (click)="batchDelete()">
            <!-- <i class="anticon anticon-delete"></i> -->
            <span>
              {{l("BatchDelete")}}
            </span>
          </button>
          <button nz-button nzType="default" *ngIf="isGranted('Pages.Menu.ExportToExcel')" (click)="exportToExcel()">
            <!-- <i class="anticon anticon-file-excel"></i> -->
            <span>
              {{l("ExportToExcel")}}
            </span>
          </button>
        </nz-col>
      </nz-row>
    </div>
    <!-- 实体的表格内容 -->
    <nz-row class="my-md">
      <nz-table #ajaxTable [nzData]="dataList" [nzTotal]="totalItems" [(nzPageIndex)]="pageNumber" [(nzPageSize)]="pageSize" [nzLoading]="isTableLoading" (nzPageIndexChange)="pageNumberChange()" (nzPageSizeChange)="refresh()" [nzShowSizeChanger]="true" [nzShowQuickJumper]="true" [nzNoResult]="noDataTemplate" [nzShowTotal]="showTotalTemplate" [nzFrontPagination]="false">
        <!-- 暂无数据组件 -->
        <ng-template #noDataTemplate>
          <no-data></no-data>
        </ng-template>
        <!-- 分页信息显示 当前 1 页/共 3 页，共 5 条/显示 1-2 条 -->
      <!--       <ng-template #showTotalTemplate let-total let-range="range">
        {{l('GridFooterDisplayText',pageNumber,totalPages,total,range[0],range[1])}}
      </ng-template> -->
      <!-- 表头 -->
      <thead (nzSortChange)="gridSort($event)">
        <tr>
          <th nzShowCheckbox [(nzChecked)]="allChecked" [nzDisabled]="allCheckboxDisabled" [nzIndeterminate]="checkboxIndeterminate" (nzCheckedChange)="checkAll($event)"></th>
          <th nz-th class="text-center" nzShowSort nzSortKey="ParentId">
            <span>{{l('ParentId')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="Parent">
            <span>{{l('Parent')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="MenuName">
            <span>{{l('MenuName')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="MenuCode">
            <span>{{l('MenuCode')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="NavigateUrl">
            <span>{{l('NavigateUrl')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="Sort" nzWidth="80px" [nzAlign]="center" class="text-center">
            <span>{{l('Sort')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="Level">
            <span>{{l('Level')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="IocName">
            <span>{{l('IocName')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="IocClassName">
            <span>{{l('IocClassName')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="IsEnabled" nzWidth="180px">
            <span>{{l('IsEnabled')}}</span>
          </th>
          <th nzWidth="200px" class="text-center">
            <span>{{l('Actions')}}</span>
          </th>
        </tr>
      </thead>
      <!-- 表格内容 -->
      <tbody>
        <tr *ngFor="let item of ajaxTable.data">
          <!-- 全选框 -->
          <td nzShowCheckbox [(nzChecked)]="item.checked" (nzCheckedChange)="refreshCheckStatus(dataList)"></td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.parentId">
                {{item.parentId}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.parent">
                {{item.parent}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.menuName">
                {{item.menuName}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.menuCode">
                {{item.menuCode}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.navigateUrl">
                {{item.navigateUrl}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.sort">
                {{item.sort}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.level">
                {{item.level}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.iocName">
                {{item.iocName}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.iocClassName">
                {{item.iocClassName}}
              </span>
            </ellipsis>
          </td>
<!--           <td nz-td class="text-center">
            <span nz-tooltip [nzTitle]="item.isEnabled">
              {{item.isEnabled}}
            </span>
          </td> -->
          <td nz-td class="text-center" [innerHTML]="item.isEnabled | yn"> </td>
          <td class="text-center">
            <!-- 编辑 -->
            <ng-container *ngIf="isGranted('Pages.Menu.Edit')">
              <a (click)="createOrEdit(item.id)">
                <i class="anticon anticon-edit mr-sm"></i>
                <span>{{l('Edit')}}</span>
              </a>
              <nz-divider nzType="vertical"></nz-divider>
            </ng-container>
            <!-- 删除 -->
            <ng-container *ngIf="isGranted('Pages.Menu.Delete')">
              <nz-popconfirm [nzTitle]="l('ConfirmDeleteWarningMessage')" (nzOnConfirm)="delete(item)" [nzOkText]="l('Ok')" [nzCancelText]="l('Cancel')">
                <a nz-popconfirm>
                  <i class="anticon anticon-delete mr-sm"></i>
                  <span>{{l('Delete')}}</span>
                </a>
              </nz-popconfirm>
            </ng-container>
          </td>
        </tr>
      </tbody>
    </nz-table>
  </nz-row>
</nz-card>
