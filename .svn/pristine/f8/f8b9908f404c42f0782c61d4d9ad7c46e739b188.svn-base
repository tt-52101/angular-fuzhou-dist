<!-- <page-header [title]="l('PayMethod')"></page-header> -->
<nz-card [nzBordered]="false">
  <div class="mb-md">
    <!-- 模糊搜索框 -->
    <nz-row nzGutter="16">
      <nz-col nzMd="6" nzSm="6">
        <!-- <form nz-form [nzLayout]="'inline'"> -->
        <nz-form-item>
          <nz-form-control>
            <nz-input-group nzSearch [nzSuffix]="suffixSearchButton">
              <input type="text" nz-input [(ngModel)]="filterText" (keyup.enter)="refresh()" name="filterText" [placeholder]="l('SearchWithThreeDot')">
              <ng-template #suffixSearchButton>
                <button nz-button nzType="primary" nzSearch type="submit" (click)="refresh()">
                  <i class="anticon anticon-search"></i>
                </button>
              </ng-template>
            </nz-input-group>
          </nz-form-control>
        </nz-form-item>
        <!-- </form> -->
      </nz-col>
      <nz-col nzMd="6" nzSm="6" class="btn-gutter">
        <button nz-button [nzType]="'primary'" *ngIf="isGranted('Pages.Menu.Create')" (click)="createOrEdit()">
          <!-- <i class="anticon anticon-plus"></i> -->
          <span>
            {{l("Create")}}
          </span>
        </button>
        <button nz-button [nzType]="'danger'" *ngIf="isGranted('Pages.Menu.BatchDelete')" (click)="batchDelete()">
          <!-- <i class="anticon anticon-delete"></i> -->
          <span>
            {{l("BatchDelete")}}
          </span>
        </button>
        <!--         <button nz-button nzType="default" *ngIf="isGranted('Pages.Menu.ExportToExcel')" (click)="exportToExcel()">
          <span>
            {{l("ExportToExcel")}}
          </span>
      </button> -->
      </nz-col>
    </nz-row>
  </div>
  <!-- 实体的表格内容 -->
  <nz-row class="my-md">
    <nz-table #ajaxTable [nzData]="dataList" nzBordered [nzTotal]="totalItems" [(nzPageIndex)]="pageNumber" [(nzPageSize)]="pageSize" [nzLoading]="isTableLoading" (nzPageIndexChange)="pageNumberChange()" (nzPageSizeChange)="refresh()" [nzShowSizeChanger]="true" [nzShowQuickJumper]="true" [nzNoResult]="noDataTemplate" [nzFrontPagination]="false">
      <!-- 暂无数据组件 -->
      <ng-template #noDataTemplate>
        <no-data></no-data>
      </ng-template>
      <!-- 表头 -->
      <thead (nzSortChange)="gridSort($event)">
        <tr>
          <th nzShowCheckbox [(nzChecked)]="allChecked" [nzDisabled]="allCheckboxDisabled" [nzIndeterminate]="checkboxIndeterminate" (nzCheckedChange)="checkAll($event)" class="text-center"></th>
          <th nz-th class="text-center" nzShowSort nzSortKey="PayName">
            <span>{{l('PayName')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="PayCode">
            <span>{{l('PayCode')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="Sort">
            <span>{{l('Sort')}}</span>
          </th>
          <th nz-th class="text-center" nzShowSort nzSortKey="IsEnabled">
            <span>{{l('IsEnabled')}}</span>
          </th>
          <th nzWidth="230px" class="text-center">
            <span>{{l('Actions')}}</span>
          </th>
        </tr>
      </thead>
      <!-- 表格内容 -->
      <tbody>
        <tr *ngFor="let item of ajaxTable.data">
          <!-- 全选框 -->
          <td nzShowCheckbox [(nzChecked)]="item.checked" (nzCheckedChange)="refreshCheckStatus(dataList)" class="text-center"></td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.payName">
                {{item.payName}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.payCode">
                {{item.payCode}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.sort">
                {{item.sort}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <ellipsis lines="1">
              <span nz-tooltip [nzTitle]="item.isEnabled">
                {{item.isEnabled}}
              </span>
            </ellipsis>
          </td>
          <td nz-td class="text-center">
            <!-- 编辑 -->
            <ng-container *ngIf="isGranted('Pages.PayMethod.Edit')">
              <a (click)="createOrEdit(item.id)">
                <!-- <i class="anticon anticon-edit mr-sm"></i> -->
                <span>{{l('Edit')}}</span>
              </a>
              <nz-divider nzType="vertical"></nz-divider>
            </ng-container>
            <!-- 删除 -->
            <ng-container *ngIf="isGranted('Pages.PayMethod.Delete')">
              <nz-popconfirm [nzTitle]="l('ConfirmDeleteWarningMessage')" (nzOnConfirm)="delete(item)" [nzOkText]="l('Ok')" [nzCancelText]="l('Cancel')">
                <a nz-popconfirm>
                  <!-- <i class="anticon anticon-delete mr-sm"></i> -->
                  <span>{{l('Delete')}}</span>
                </a>
              </nz-popconfirm>
            </ng-container>
          </td>
        </tr>
      </tbody>
    </nz-table>
  </nz-row>
</nz-card>
