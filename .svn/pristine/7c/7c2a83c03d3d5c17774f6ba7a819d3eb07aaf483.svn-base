

<form nz-form #validateForm="ngForm" (ngSubmit)="submitForm()" nzLayout="horizontal" autocomplete="off">
    <!-- 模态框头部 -->
    <div class="modal-header">
        <div class="modal-title">
            <i class="anticon anticon-medicine-box mr-sm"></i>
            <span *ngIf="entity.id">{{l('Edit')}}</span>
            <span *ngIf="!entity.id">{{l('Create')}}</span>
        </div>
    </div>
    <!-- 模态框内容 -->
    <fieldset>
        <!-- 提示信息 -->
        <!-- <nz-alert nzType="info" nzCloseable [nzShowIcon]="true" nzMessage="l('我想提示点什么内容给你说')"></nz-alert> -->
            <nz-form-item nz-row>
                    <nz-form-label nz-col [nzSm]="6" [nzXs]="24" nzRequired nzFor="wharfName">{{l('WharfName')}}</nz-form-label>
                <nz-form-control nz-col [nzSm]="14" [nzXs]="24" nzHasFeedback>
                            <input nz-input name="wharfName" #wharfName="ngModel"
                                   [(ngModel)]="entity.wharfName"
                                   [placeholder]="l('WharfName')"  required >

                            <!-- 校验 -->
                            <nz-form-explain *ngIf="wharfName.control.dirty&&wharfName.control.errors">
                                                                <ng-container *ngIf="wharfName.control.hasError('required')">{{l('CanNotNull')}}</ng-container>
                            </nz-form-explain>

                </nz-form-control>
            </nz-form-item>
            <nz-form-item nz-row>
                    <nz-form-label nz-col [nzSm]="6" [nzXs]="24" nzRequired nzFor="wharfNo">{{l('WharfNo')}}</nz-form-label>
                <nz-form-control nz-col [nzSm]="14" [nzXs]="24" nzHasFeedback>
                            <input nz-input name="wharfNo" #wharfNo="ngModel"
                                   [(ngModel)]="entity.wharfNo"
                                   [placeholder]="l('WharfNo')"  required >

                            <!-- 校验 -->
                            <nz-form-explain *ngIf="wharfNo.control.dirty&&wharfNo.control.errors">
                                                                <ng-container *ngIf="wharfNo.control.hasError('required')">{{l('CanNotNull')}}</ng-container>
                            </nz-form-explain>

                </nz-form-control>
            </nz-form-item>
            <nz-form-item nz-row>
                    <nz-form-label nz-col [nzSm]="6" [nzXs]="24" nzRequired nzFor="wharfLeader">{{l('WharfLeader')}}</nz-form-label>
                <nz-form-control nz-col [nzSm]="14" [nzXs]="24" nzHasFeedback>
                            <input nz-input name="wharfLeader" #wharfLeader="ngModel"
                                   [(ngModel)]="entity.wharfLeader"
                                   [placeholder]="l('WharfLeader')"  required >

                            <!-- 校验 -->
                            <nz-form-explain *ngIf="wharfLeader.control.dirty&&wharfLeader.control.errors">
                                                                <ng-container *ngIf="wharfLeader.control.hasError('required')">{{l('CanNotNull')}}</ng-container>
                            </nz-form-explain>

                </nz-form-control>
            </nz-form-item>
            <nz-form-item nz-row>
                    <nz-form-label nz-col [nzSm]="6" [nzXs]="24" nzRequired nzFor="leaderMobile">{{l('LeaderMobile')}}</nz-form-label>
                <nz-form-control nz-col [nzSm]="14" [nzXs]="24" nzHasFeedback>
                            <input nz-input name="leaderMobile" #leaderMobile="ngModel"
                                   [(ngModel)]="entity.leaderMobile"
                                   [placeholder]="l('LeaderMobile')"  required >

                            <!-- 校验 -->
                            <nz-form-explain *ngIf="leaderMobile.control.dirty&&leaderMobile.control.errors">
                                                                <ng-container *ngIf="leaderMobile.control.hasError('required')">{{l('CanNotNull')}}</ng-container>
                            </nz-form-explain>

                </nz-form-control>
            </nz-form-item>
            <nz-form-item nz-row>
                    <nz-form-label nz-col [nzSm]="6" [nzXs]="24" nzRequired nzFor="wharfPosition">{{l('WharfPosition')}}</nz-form-label>
                <nz-form-control nz-col [nzSm]="14" [nzXs]="24" nzHasFeedback>
                            <input nz-input name="wharfPosition" #wharfPosition="ngModel"
                                   [(ngModel)]="entity.wharfPosition"
                                   [placeholder]="l('WharfPosition')"  required >

                            <!-- 校验 -->
                            <nz-form-explain *ngIf="wharfPosition.control.dirty&&wharfPosition.control.errors">
                                                                <ng-container *ngIf="wharfPosition.control.hasError('required')">{{l('CanNotNull')}}</ng-container>
                            </nz-form-explain>

                </nz-form-control>
            </nz-form-item>
            <nz-form-item nz-row>
                    <nz-form-label nz-col [nzSm]="6" [nzXs]="24" nzRequired nzFor="isEenable">{{l('IsEenable')}}</nz-form-label>
                <nz-form-control nz-col [nzSm]="14" [nzXs]="24" nzHasFeedback>
                            <label nz-checkbox name="isEenable" #isEenable="ngModel"
                                   [(ngModel)]="entity.isEenable"  required >{{l('IsEenable')}}</label>

                            <!-- 校验 -->
                            <nz-form-explain *ngIf="isEenable.control.dirty&&isEenable.control.errors">
                                                                <ng-container *ngIf="isEenable.control.hasError('required')">{{l('CanNotNull')}}</ng-container>
                            </nz-form-explain>

                </nz-form-control>
            </nz-form-item>

    </fieldset>
    <!-- 模态框底部 -->
    <div class="modal-footer">
        <button nz-button [nzType]="'default'" type="button" (click)="close()" [disabled]="saving">
            <i class="anticon anticon-close-circle-o"></i> {{l("Cancel")}}
        </button>
        <button nz-button [nzType]="'primary'" type="submit" [disabled]="!validateForm.form.valid|| saving" [nzLoading]="saving">
            <i class="anticon anticon-save" *ngIf="!saving"></i> {{l("Save")}}
        </button>
    </div>
</form>





