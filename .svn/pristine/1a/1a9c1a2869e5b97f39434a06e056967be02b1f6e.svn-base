	constructor() {}

	ngOnInit() {
		this.timestamp = (new Date()).getTime();
		this.settime(0)
	}



	settime(e) {

		if (e == 1) {
			this.timestamp = this.timestamp - 86400000
		} else if (e == 2) {
			this.timestamp = this.timestamp + 86400000
		}
		var now = new Date(this.timestamp)
		var month = now.getMonth() + 1;
		var day = now.getDate();
		var week = now.getDay() + '';
		switch (week) {
			case '1':
			week = '星期一';
			break;
			case '2':
			week = '星期二';
			break;
			case '3':
			week = '星期三';
			break;
			case '4':
			week = '星期四';
			break;
			case '5':
			week = '星期五';
			break;
			case '6':
			week = '星期六';
			break;
			case '0':
			week = '星期日';
			break;
		}
		this.nowdate = month + "月" + day + "日";
		this.nowday = week
	}




